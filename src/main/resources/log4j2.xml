<?xml version="1.0" encoding="UTF-8" ?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%highlight{%level}] %d{yyyy-MM-dd HH:mm:ss} %c - %highlight{%msg}{INFO=cyan, ERROR=bright_red}%n%throwable"/>
<!--            <PatternLayout pattern="[%level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c - %msg%n"/>-->
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>